<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/screen_outer_padding"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/widgets_inner_padding"
        android:padding="@dimen/widgets_inner_padding"
        android:text="@string/consumption_details"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_size_general"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/screen_outer_padding"
        android:elevation="2dp"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="@dimen/widgets_inner_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/widgets_inner_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/widgets_inner_padding"
                android:text="@string/teco_gas"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_size_general"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/avg_consumption_graph"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/screen_outer_padding"
                android:layout_marginLeft="@dimen/screen_outer_padding"
                android:layout_marginRight="@dimen/screen_outer_padding"
                android:background="@drawable/graph"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/widgets_inner_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/avg_consumption"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/avg_spending"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/widgets_inner_padding"
                android:paddingRight="@dimen/widgets_inner_padding">

                <TextView
                    android:id="@+id/avg_consumption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="1.56Thm"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/avg_spending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="$98"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
