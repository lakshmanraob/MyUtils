<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="my.util.app.fragments.ComplaintsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/widgets_inner_padding">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="{fa-user}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_icon_size" />

        <TextView
            android:id="@+id/complaints_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complaints"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_general" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_outer_padding">

        <TextView
            android:id="@+id/emergency_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="@string/emergency_msg"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_general" />


        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/call_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="{md-call}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_icon_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_grey" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/widgets_inner_padding">

        <Spinner
            android:id="@+id/outage_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/screen_outer_padding"
            android:background="@color/transparent"
            android:spinnerMode="dropdown" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/spinner_arrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="{md-arrow-drop-down}"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_icon_size" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_outer_padding">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            android:layout_height="wrap_content"
            android:elevation="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:padding="@dimen/widgets_inner_padding"
                android:layout_marginRight="50dp"
                android:background="@color/transparent"
                android:hint="@string/address"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_size_general" />


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/location_detector"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:shadowColor="#22000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:text="{md-my-location}"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_icon_size" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_outer_padding">

        <TextView
            android:id="@+id/add_photos_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="@string/add_photos"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_general" />

        <GridLayout
            android:id="@+id/photos_grid"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="2">

        </GridLayout>

    </LinearLayout>

</LinearLayout>
