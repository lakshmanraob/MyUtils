<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_outer_padding"
        android:descendantFocusability="beforeDescendants"
        android:elevation="2dp"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="@string/bill_details_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/billing_address"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/billing_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingTop="@dimen/five_val"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/meter_number"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_size_general" />

                    <TextView
                        android:id="@+id/meter_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingTop="@dimen/five_val"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_size_general"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/add_meter_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/images_grid_spacing"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="{md-add-circle-outline}"
                    android:textColor="@color/pink"
                    android:textSize="20sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/billing_date"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/billing_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingTop="@dimen/five_val"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/consumption"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/total_consumption"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/total_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingTop="@dimen/five_val"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/avg_consumption"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/avg_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingTop="@dimen/five_val"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/avg_consumption_graph"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/screen_outer_padding"
                android:layout_marginLeft="@dimen/screen_outer_padding"
                android:layout_marginRight="@dimen/screen_outer_padding"
                android:background="@drawable/graph" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:padding="@dimen/screen_outer_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/payment_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/screen_outer_padding"
                android:paddingRight="@dimen/screen_outer_padding"
                android:paddingTop="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five_val"
                    android:layout_weight="1.4"
                    android:text="@string/plan_details"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/cost_per_unit_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/five_val"
                    android:layout_weight="0.6"
                    android:text="@string/cost_per_unit"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/screen_outer_padding"
                android:paddingLeft="@dimen/screen_outer_padding"
                android:paddingRight="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:id="@+id/plan_details"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five_val"
                    android:layout_weight="1.4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cost_per_unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/five_val"
                    android:layout_weight="0.6"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/screen_outer_padding"
                android:paddingLeft="@dimen/screen_outer_padding"
                android:paddingRight="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five_val"
                    android:layout_weight="1.2"
                    android:text="@string/pay_by_date"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/pay_by_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five_val"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/screen_outer_padding"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five_val"
                    android:layout_weight="1.2"
                    android:text="@string/total"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_general" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/five_val"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_size_extra_large"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/widgets_spacing">

                    <LinearLayout
                        android:id="@+id/go_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{md-arrow-back}"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/five_val"
                            android:text="@string/back_str"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/pay_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_bg_filled"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/fifty_spacing"
                        android:paddingRight="@dimen/fifty_spacing"
                        android:text="@string/pay"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_large"
                        android:textStyle="bold" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>