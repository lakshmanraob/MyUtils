<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg_end"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/screen_outer_padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="@string/account_number"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ud_accountnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/dm_accountnumber"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/widgets_inner_padding"
        android:paddingLeft="@dimen/screen_outer_padding"
        android:paddingRight="@dimen/screen_outer_padding"
        android:paddingTop="@dimen/widgets_inner_padding">

        <my.util.app.DetailsView
            android:id="@+id/ud_firstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            custom:content="Name"
            custom:heading="First Name" />

        <my.util.app.DetailsView
            android:id="@+id/ud_lastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            custom:content="Name"
            custom:heading="Last Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <my.util.app.DetailsView
            android:id="@+id/ud_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/widgets_inner_padding"
            android:paddingLeft="@dimen/screen_outer_padding"
            android:paddingRight="@dimen/screen_outer_padding"
            android:paddingTop="@dimen/widgets_inner_padding"
            custom:content="May 28, 1997"
            custom:heading="Date of birth" />

        <my.util.app.DetailsView
            android:id="@+id/ud_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/widgets_inner_padding"
            android:paddingLeft="@dimen/screen_outer_padding"
            android:paddingRight="@dimen/screen_outer_padding"
            android:paddingTop="@dimen/widgets_inner_padding"
            custom:content="58725186868"
            custom:heading="Phone Number" />

        <my.util.app.DetailsView
            android:id="@+id/ud_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/widgets_inner_padding"
            android:paddingLeft="@dimen/screen_outer_padding"
            android:paddingRight="@dimen/screen_outer_padding"
            android:paddingTop="@dimen/widgets_inner_padding"
            custom:content="labattula@deloitte.com"
            custom:heading="Email address" />

        <my.util.app.DetailsView
            android:id="@+id/ud_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/widgets_inner_padding"
            android:paddingLeft="@dimen/screen_outer_padding"
            android:paddingRight="@dimen/screen_outer_padding"
            android:paddingTop="@dimen/widgets_inner_padding"
            custom:content="016, dgj"
            custom:heading="Address" />

    </LinearLayout>

</LinearLayout>